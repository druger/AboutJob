    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CompanyDescriptionFragment">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
