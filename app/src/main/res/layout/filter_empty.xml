<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFilterEmpty"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_filter_result" />

    <TextView
        android:id="@+id/tvFilterEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/filter_empty"
        app:layout_constraintEnd_toEndOf="@+id/ivFilterEmpty"
        app:layout_constraintStart_toStartOf="@+id/ivFilterEmpty"
        app:layout_constraintTop_toBottomOf="@+id/ivFilterEmpty" />

</androidx.constraintlayout.widget.ConstraintLayout>