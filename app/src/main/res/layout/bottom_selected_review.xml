<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="review"
            type="com.druger.aboutwork.model.Review" />
    </data>

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:weightSum="1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="ContentDescription">

        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/thumb_up" />

        <TextView
            android:id="@+id/tvLike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:maxLines="1"
            tools:text="0"
            android:text="@{String.valueOf(review.like)}" />

        <ImageView
            android:id="@+id/ivDislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/thumb_down" />

        <TextView
            android:id="@+id/tvDislike"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:maxLines="1"
            tools:text="0"
            android:text="@{String.valueOf(review.dislike)}" />

        <ImageView
            android:id="@+id/ivComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            app:srcCompat="@drawable/ic_message" />
    </LinearLayout>
</layout>
