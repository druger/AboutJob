<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.druger.aboutwork.utils.Utils" />
        <variable
            name="review"
            type="com.druger.aboutwork.model.Review" />
    </data>

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                tools:text="Name"
                android:text="@{review.name}"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/tvUserName"
                tools:text="Date"
                android:text="@{Utils.getDate(review.date)}"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvUserName"
                android:layout_alignParentEnd="true"
                tools:text="City"
                android:text="@{review.city}"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvPosition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUserName"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/position"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvPosition"
                android:layout_toEndOf="@+id/tvPosition"
                android:textColor="@android:color/black"
                tools:text="Developer"
                android:text="@{review.position}"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmploymentDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPosition"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/empoyment_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_employment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvEmploymentDate"
                android:layout_toEndOf="@+id/tvEmploymentDate"
                android:textColor="@android:color/black"
                android:text="@{Utils.getDate(review.employmentDate)}"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDismissalDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEmploymentDate"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/dismissal_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_dismissal_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvDismissalDate"
                android:layout_toEndOf="@+id/tvDismissalDate"
                android:textColor="@android:color/black"
                android:text="@{Utils.getDate(review.dismissalDate)}"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvInterviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDismissalDate"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:text="@string/interview_date"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_interview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tvInterviewDate"
                android:layout_toEndOf="@+id/tvInterviewDate"
                android:textColor="@android:color/black"
                android:text="@{Utils.getDate(review.interviewDate)}"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvPluses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInterviewDate"
                android:layout_marginBottom="5dp"
                android:background="@android:color/holo_green_light"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:text="@{review.pluses}"/>

            <TextView
                android:id="@+id/tvMinuses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPluses"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:background="@color/colorPrimary"
                android:padding="5dp"
                android:textColor="@android:color/black"
                android:text="@{review.minuses}"/>

            <TextView
                android:id="@+id/tvSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_salary"
                android:text="@string/salary" />

            <RatingBar
                android:id="@+id/ratingbar_salary"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvMinuses"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="1"
                android:rating="@{review.markCompany.salary}"/>

            <TextView
                android:id="@+id/tvChief"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_chief"
                android:text="@string/chief" />

            <RatingBar
                android:id="@+id/ratingbar_chief"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ratingbar_salary"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="@{review.markCompany.chief}"/>

            <TextView
                android:id="@+id/tvWorkplace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_workplace"
                android:text="@string/workplace" />

            <RatingBar
                android:id="@+id/ratingbar_workplace"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ratingbar_chief"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="@{review.markCompany.workplace}"/>

            <TextView
                android:id="@+id/tvCareer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_career"
                android:text="@string/career" />

            <RatingBar
                android:id="@+id/ratingbar_career"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ratingbar_workplace"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="@{review.markCompany.career}"/>

            <TextView
                android:id="@+id/tvCollective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_collective"
                android:text="@string/collective" />

            <RatingBar
                android:id="@+id/ratingbar_collective"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ratingbar_career"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="@{review.markCompany.collective}"/>

            <TextView
                android:id="@+id/tvSocialPackage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ratingbar_social_package"
                android:text="@string/social_package" />

            <RatingBar
                android:id="@+id/ratingbar_social_package"
                style="@style/reviewRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ratingbar_collective"
                android:isIndicator="true"
                android:stepSize="1"
                android:rating="@{review.markCompany.socialPackage}"/>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>