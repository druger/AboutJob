<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/actionBarSize">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ltSend">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:contentPaddingBottom="5dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="druger" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="06.08.2018" />

                    <TextView
                        android:id="@+id/tvPosition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvName"
                        tools:text="developer" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPosition"
                        tools:text="@string/working" />

                    <View
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/grey500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvStatus" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/grey500"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ratingbar_workplace" />

                    <TextView
                        android:id="@+id/tvDescriptionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tvStatus"
                        app:layout_constraintStart_toEndOf="@+id/tvStatus"
                        app:layout_constraintTop_toTopOf="@+id/tvStatus"
                        tools:text="3 года 5 месяцев" />

                    <TextView
                        android:id="@+id/tvSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/salary"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/line" />

                    <TextView
                        android:id="@+id/tvCareer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/career"
                        app:layout_constraintStart_toStartOf="@+id/ratingbar_career"
                        app:layout_constraintTop_toTopOf="@+id/tvSalary" />

                    <TextView
                        android:id="@+id/tvCollective"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/collective"
                        app:layout_constraintStart_toStartOf="@+id/ratingbar_collective"
                        app:layout_constraintTop_toBottomOf="@+id/ratingbar_career" />

                    <TextView
                        android:id="@+id/tvSocialPackage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/social_package"
                        app:layout_constraintStart_toStartOf="@+id/ratingbar_social_package"
                        app:layout_constraintTop_toBottomOf="@+id/ratingbar_collective" />

                    <RatingBar
                        android:id="@+id/ratingbar_salary"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintStart_toStartOf="@+id/tvSalary"
                        app:layout_constraintTop_toBottomOf="@+id/tvSalary" />

                    <RatingBar
                        android:id="@+id/ratingbar_career"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCareer" />

                    <RatingBar
                        android:id="@+id/ratingbar_collective"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvCollective" />

                    <RatingBar
                        android:id="@+id/ratingbar_social_package"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvSocialPackage" />

                    <RatingBar
                        android:id="@+id/ratingbar_chief"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintStart_toStartOf="@+id/tvChief"
                        app:layout_constraintTop_toBottomOf="@+id/tvChief" />

                    <RatingBar
                        android:id="@+id/ratingbar_workplace"
                        style="@style/reviewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:isIndicator="true"
                        android:stepSize="1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvWorkplace" />

                    <TextView
                        android:id="@+id/tvChief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/chief"
                        app:layout_constraintStart_toStartOf="@+id/ratingbar_salary"
                        app:layout_constraintTop_toBottomOf="@+id/ratingbar_salary" />

                    <TextView
                        android:id="@+id/tvWorkplace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/workplace"
                        app:layout_constraintStart_toStartOf="@+id/ratingbar_chief"
                        app:layout_constraintTop_toBottomOf="@+id/ratingbar_chief" />

                    <TextView
                        android:id="@+id/tvPluses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="3"
                        android:textColor="@android:color/black"
                        card_view:layout_constraintStart_toStartOf="@+id/tvPlusesDesc"
                        card_view:layout_constraintTop_toBottomOf="@+id/tvPlusesDesc"
                        tools:text="какие-то плюсы" />

                    <TextView
                        android:id="@+id/tvPlusesDesc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/pluses"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/line2" />

                    <TextView
                        android:id="@+id/tvMinuses"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:maxLines="3"
                        android:textColor="@android:color/black"
                        card_view:layout_constraintStart_toStartOf="@+id/tvMinusesDescp"
                        card_view:layout_constraintTop_toBottomOf="@+id/tvMinusesDescp"
                        tools:text="какие-то минусы" />

                    <TextView
                        android:id="@+id/tvMinusesDescp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/minuses"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvPluses" />

                    <TextView
                        android:id="@+id/tvDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvMinuses"
                        card_view:layout_constraintBottom_toBottomOf="@+id/ivDislike"
                        card_view:layout_constraintTop_toTopOf="@+id/ivDislike"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/tvLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/ivDislike"
                        app:layout_constraintTop_toBottomOf="@+id/tvMinuses"
                        card_view:layout_constraintBottom_toBottomOf="@+id/ivLike"
                        card_view:layout_constraintTop_toTopOf="@+id/ivLike"
                        tools:text="2" />

                    <ImageView
                        android:id="@+id/ivDislike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/ultra_small_margin"
                        app:layout_constraintEnd_toStartOf="@+id/tvDislike"
                        app:layout_constraintTop_toBottomOf="@+id/tvMinuses"
                        app:srcCompat="@drawable/thumb_down" />

                    <ImageView
                        android:id="@+id/ivLike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="@dimen/ultra_small_margin"
                        app:layout_constraintEnd_toStartOf="@+id/tvLike"
                        app:layout_constraintTop_toBottomOf="@+id/tvMinuses"
                        app:srcCompat="@drawable/thumb_up" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvComments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvContent"
                android:layout_marginTop="10dp" />
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ltSend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:weightSum="1">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.9"
            android:background="@android:color/white"
            android:hint="@string/your_message"
            android:inputType="textMultiLine"
            android:maxHeight="80dp"
            android:paddingStart="15dp" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="0.1"
            android:clickable="false"
            app:srcCompat="@drawable/ic_send" />
    </LinearLayout>
</RelativeLayout>